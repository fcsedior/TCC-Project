<div class="container_principal" id="editarPerfil">
    <div class="profile_edit">

        <!-- INFORMAÇÕES PERFIL SUPERIOR -->

        <div class="profile">
            <div class="profile_background"
                style="background: url(https://img.freepik.com/free-vector/gradient-spheres-background_52683-76367.jpg); background-size: cover; background-repeat: no-repeat">
                <img src={{usuarioPerfil.foto}}>
            </div>
            <div class="profile_info">
                <div class="profile_info_text">
                    <div class="profile_info_config">
                        <h1>{{usuarioPerfil.nomeCompleto}}</h1>
                    </div>
                    {{#if usuarioPerfil.resumo}}
                    <h2><ion-icon name="newspaper-outline"></ion-icon> {{usuarioPerfil.resumo}}</h2>
                    {{else}}

                    {{/if}}

                    {{#if formacao}}
                    <h2><ion-icon name="school-outline"></ion-icon> {{formacao.area}} - {{formacao.nome}}</h2>
                    {{else}}

                    {{/if}}

                    <h2><ion-icon name="mail-outline"></ion-icon> {{usuarioPerfil.email}}</h2>

                    {{#if usuarioPerfil.telefone}}
                    <h2><ion-icon name="call-outline"></ion-icon> {{usuarioPerfil.telefone}}</h2>
                    {{else}}

                    {{/if}}

                    {{#if usuarioPerfil.website}}
                    <p id="margin_top">{{usuario.website}}</p>
                    {{else}}

                    {{/if}}

                    {{#if endereco}}
                    <p>{{endereco.cidade}}, {{endereco.estado}}, {{endereco.pais}} ● <span class="span_link">Contact
                            Info</span></p>
                    {{else}}

                    {{/if}}

                </div>

            </div>

            <!-- INFORMAÇÕES ANALYTICS -->
            <div class="profile_analytics">

                <h1 class="title_profile_edit">
                    Analytics
                    <span class="subtitle_profile_edit">
                        <ion-icon name="eye-outline"></ion-icon>
                        Informações de Atividade
                    </span>
                </h1>


                <div class="edit_profile_message">
                    <canvas id="graficoPerfil" height="400" width="400"></canvas>
                </div>
            </div>

            <!-- INFORMAÇÕES ATIVIDADE -->
            <div class="profile_activity">
                <h1 class="title_profile_edit">
                    Atividade
                    <span class="followers_profile_edit">
                        {{usuarioPerfil.seguidores}} seguidores
                    </span>
                </h1>

                {{#each postagens}}

                <div class="publication">
                    <div class="info_publication">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135789.png">
                        <div>
                            <h2>{{nomeDono}}</h2>
                            <p class="date_publication">{{data}}</p>
                        </div>
                    </div>
                    <div class="content_publication">
                        <div class="text_publication">
                            {{conteudo}}
                        </div>
                        <div class="image_publication">

                        </div>
                    </div>
                    <div class="bottom_publication">
                        <div class="actions_publications">
                            <ion-icon name="heart-outline"></ion-icon>
                            <ion-icon name="chatbubbles-outline"></ion-icon>
                            <ion-icon name="share-social-outline"></ion-icon>
                            <ion-icon name="send-outline"></ion-icon>
                        </div>
                        <div class="qtd_likes_publication">
                            <p>{{curtidas}} curtidas</p>
                        </div>
                    </div>
                </div>

                {{else}}

                <div class="edit_profile_message">
                    <h2>
                        Essa pessoa não postou nada recentemente...
                    </h2>
                    <p>
                        As publicações recentes irão aparecer aqui!
                    </p>
                </div>

                {{/each}}
            </div>

            <!-- Licenses & certifications -->

            <div class="profile_certifications">
                <h1 class="title_profile_edit">
                    Licenças e Certificações
                </h1>


                {{#each certificacoes}}

                <div class="certificacao">
                    <img src="{{foto}}" alt="Logo">
                    <div class="certificacao_text">
                        <h2>
                            {{nome}}
                        </h2>
                        <p>
                            {{unidade}}
                        </p>
                    </div>
                </div>

                {{else}}

                <div class="edit_profile_message">
                    <h2>
                        Sem Dados...
                    </h2>
                </div>

                {{/each}}

            </div>

            <!-- INFORMAÇÕES PESSOAIS (ESCOLA, FACULDADE, EMPREGOS) -->
            <div class="profile_experience">
                <h1 class="title_profile_edit">
                    Experiência Profissional
                </h1>

                {{#each experiencias}}

                {{else}}

                <div class="edit_profile_message">
                    <h2>
                        Sem Dados...
                    </h2>
                    <p>
                        Nenhuma informação sobre experiência disponível!
                    </p>
                </div>

                {{/each}}
            </div>

        </div>

        <!-- ADICIONAR AMIGOS -->

        <div class="container_right">

            {{#if usuarios}}
            <div class="index_friends">
                <h1 class="title_index_events">
                    <ion-icon name="git-network-outline"></ion-icon>
                    Talvez você conheça
                </h1>

                {{#each usuarios}}

                <a href="/usuario/verPerfil/{{_id}}">
