                        <div class="photo_friends_index">
                            <img src={{foto}}>
                        </div>
                        <div class="text_friends_index">
                            <p class="name_friends_index">
                                {{nomeCompleto}}
                            </p>
                            <p class="desc_friends_index">
                                {{#if cargo_atual}}
