<div class="container_principal" id="amigos">

    <div class="container_unico">

        {{>_msg}}

        <h1>Explorar novas Amizades</h1>
        <div class="container_amigos">

            <div class="acoes_amigos">
                <a href="/usuario/encontrarAmigos">
                    <div>
                        <ion-icon name="rocket-outline"></ion-icon> Encontrar Amigos
                    </div>
                </a>
                <a href="/usuario/encontrarPaginas">
                    <div>
                        <ion-icon name="duplicate-outline"></ion-icon> Encontrar Páginas
                    </div>
                </a>
                <a href="/usuario/amigosPendentes">
                    <div>
                        <ion-icon name="person-add-outline"></ion-icon> Amigos Pendentes
                    </div>
                </a>
                <a href="#">
                    <div>
                        <ion-icon name="mail-outline"></ion-icon> Convites Enviados
                    </div>
                </a>
                <a href="/usuario/amigos">
                    <div>
                        <ion-icon name="people-outline"></ion-icon> Meus Amigos
                    </div>
                </a>
                <a href="/usuario/amigos">
                    <div>
                        <ion-icon name="document-text-outline"></ion-icon> Páginas que Sigo
                    </div>
                </a>
            </div>

            <div class="opcoes_amigos">
                {{#each paginas}}

                <div class="opcao_pagina">
                    <div class="opcao_pagina_top"
                        style="background: url(https://img.freepik.com/free-vector/gradient-spheres-background_52683-76367.jpg)">
                    </div>
                    <div class="opcao_pagina_bottom">
                        <form action="/usuario/encontrarPaginas/seguirPagina" method="POST">
                            <div class="logo_pagina_container">
                                <img src="{{logo}}">
                            </div>
                            <h2>
                                {{nome}}
                            </h2>
                            <p class="opcao_pagina_resumo">
                                {{seguidores}} Seguidores
                            </p>
                            <div class="opcao_pagina_formacao">
                                <input type="hidden" name="id" id="id" value="{{_id}}">
                            </div>
                        </form>
                    </div>
                </div>

                {{else}}

                <div class="center">
                    <a href="/usuario/paginas">
                        <button class="cta">
                            <span>Você ainda não segue nenhuma Página</span>
                            <svg viewBox="0 0 13 10" height="10px" width="15px">
                                <path d="M1,5 L11,5"></path>
                                <polyline points="8 1 12 5 8 9"></polyline>
                            </svg>
                        </button>
                    </a>
                </div>

                {{/each}}

            </div>
        </div>

    </div>
</div>