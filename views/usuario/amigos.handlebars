<div class="container_principal" id="amigos">

    <div class="container_unico">

        {{>_msg}}

        <h1>Explorar novas Amizades</h1>
        <div class="container_amigos">

            <div class="acoes_amigos">
                <a href="#">
                    <div>
                        <ion-icon name="rocket-outline"></ion-icon><p> Encontrar Amigos</p>
                    </div>
                </a>
                <a href="/usuario/encontrarPaginas">
                    <div>
                        <ion-icon name="duplicate-outline"></ion-icon><p> Encontrar Páginas</p>
                    </div>
                </a>
                <a href="/usuario/amigosPendentes">
                    <div>
                        <ion-icon name="person-add-outline"></ion-icon><p> Amigos Pendentes</p>
                    </div>
                </a>
                <a href="#">
                    <div>
                        <ion-icon name="mail-outline"></ion-icon> <p> Convites Enviados</p>
                    </div>
                </a>
                <a href="/usuario/amigos">
                    <div>
                        <ion-icon name="people-outline"></ion-icon> <p> Meus Amigos</p>
                    </div>
                </a>
                <a href="/usuario/paginas">
                    <div>
                        <ion-icon name="document-text-outline"></ion-icon> <p> Páginas que Sigo</p>
                    </div>
                </a>
            </div>

            <div class="opcoes_amigos">
                {{#each usuarios}}
                <a href="/usuario/verPerfil/{{_id}}">
                    <div class="opcao_amigo">
                        <div class="opcao_amigo_top" style="background-image: url({{background}})">
                        </div>
                        <div class="opcao_amigo_bottom">
                            <form action="/usuario/amigos/addAmigo" method="POST">
                                <img src="{{foto}}">
                                <h2>
                                    {{nomeCompleto}}
                                </h2>
                                <p class="opcao_amigo_resumo">
                                    {{resumo}}
                                </p>
                                <p class="opcao_amigo_formacao">
                                    {{cargo_atual}}
                                </p>
                                <input type="hidden" name="id" id="id" value="{{_id}}">
                                <button type="submit" class="adicionar_amigo">
                                    Adicionar
                                </button>
                            </form>
                        </div>
                    </div>
                </a>

                {{else}}

                <div class="center">
                    <a href="/usuario/amigos">
                        <button class="cta">
                            <span>Você ainda não possui Amigos :C</span>
                            <svg viewBox="0 0 13 10" height="10px" width="15px">
                                <path d="M1,5 L11,5"></path>
                                <polyline points="8 1 12 5 8 9"></polyline>
                            </svg>
                        </button>
                    </a>
                </div>

                {{/each}}


            </div>
        </div>

    </div>
</div>