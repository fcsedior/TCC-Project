                    </a>
                </div>

            </div>
        </div>

        <div class="container_left_bottom">

            <!-- ACESSO RÁPIDO -->

            <div class="main_info">
                <h3>Gerenciar minha Rede</h3>

                <a href="/usuario/notificacoes">
                    <div class="main_info_div">
                        <div><ion-icon name="mail-unread-outline"></ion-icon></div>
                        <div>
                            <p>Notificações</p>
                        </div>
                    </div>
                </a>
                <a href="/usuario/encontrarAmigos">
                    <div class="main_info_div">
                        <div><ion-icon name="people-outline"></ion-icon></div>
                        <div>
                            <p>Amizades</p>
                        </div>
                    </div>
                </a>
                <a href="/usuario/networking">
                    <div class="main_info_div">
                        <div><ion-icon name="wifi-outline"></ion-icon></div>
                        <div>
                            <p>Networking</p>
                        </div>
                    </div>
                </a>
                <a href="/usuario/criarPagina">
                    <div class="main_info_div">
                        <div><ion-icon name="add-circle-outline"></ion-icon></div>
                        <div>
                            <p>Criar Página</p>
                        </div>
                    </div>
                </a>
                <a href="#">
                    <div class="main_info_div">
                        <div><ion-icon name="newspaper-outline"></ion-icon></div>
                        <div>
                            <p>Criar Evento</p>
                        </div>
                    </div>
                </a>

                <div class="center">
                    <a href="/usuario/buscarVagas">
                        <button class="main_info_button">
                            Ver mais
                        </button>
                    </a>
                </div>

            </div>

            <!-- FEED -->

            <form action="/usuario/publicar" method="POST">
                <div class="feed">
                    <div class="text_something">
                        <div class="text_something_top">
                            <div class="photo_text_feed">
                                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135789.png">
                            </div>
                            <div class="text_feed">
                                <input type="text" name="feed_text" id="feed_text" maxlength="200"
                                    placeholder="Escreva Algo" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="text_something_bottom">
                            <ion-icon name="image-outline"></ion-icon>
                            <ion-icon name="location-outline"></ion-icon>
                            <ion-icon name="happy-outline"></ion-icon>
                            <input type="submit" name="publicar" id="publicar" value="Publicar">
                        </div>
                    </div>
            </form>

            <div class="feed_publications">

                <!-- PUBLICAÇÕES -->

                {{#each postagens}}

                <div class="publication">
                    <div class="info_publication">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135789.png">
                        <div>
                            <h2>{{nomeDono}}</h2>
                            <p class="date_publication">{{data}}</p>
                        </div>
                    </div>
                    <div class="content_publication">
                        <div class="text_publication">
                            {{conteudo}}
                        </div>
                        <div class="image_publication">

                        </div>
                    </div>
                    <div class="bottom_publication">
                        <div class="actions_publications">
                            <ion-icon name="heart-outline"></ion-icon>
                            <ion-icon name="chatbubbles-outline"></ion-icon>
                            <ion-icon name="share-social-outline"></ion-icon>
                            <ion-icon name="send-outline"></ion-icon>
                        </div>
                        <div class="qtd_likes_publication">
                            <p>{{curtidas}} curtidas</p>
                        </div>
                    </div>
                </div>

                {{else}}

                <p>Nenhuma Postagem</p>

                {{/each}}

            </div>
        </div>

    </div>
</div>

