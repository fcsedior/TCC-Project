                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135789.png">
                    </div>

                    <div class="desc_main_profile">
                        <h1>
                            {{usuario.nomeCompleto}}
                        </h1>
                        <p>
                            {{usuario.email}}
                        </p>
                        <h2>
                            {{usuario.cargo_atual}}
                        </h2>
                        <p>
                            <span class="pink_font">{{usuario.seguidores}}</span> seguidores
                        </p>
                    </div>
                </div>

                <div class="right_profile">
                    <a href="/usuario/editarPerfil">
                        <button class="edit_profile_button_index"> Editar Perfil
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                    <path fill="none" d="M0 0h24v24H0z"></path>
                                    <path fill="currentColor"
                                        d="M16.172 11l-5.364-5.364 1.414-1.414L20 12l-7.778 7.778-1.414-1.414L16.172 13H4v-2z">
                                    </path>
                                </svg>
                            </div>
